<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uz.gita.gitaacademy.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardBackgroundColor="#1A1E4E"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="22dp"
        android:textAllCaps="true"
        android:text="GITA Dasturchilar akademiyasi"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:background="#1A1E4E"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="O'quv markaz asoschisi va rahbari"
                android:textColor="@color/white"
                android:paddingLeft="24dp" />
            <FrameLayout
                android:background="@drawable/bg_item_slick"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/image_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:src="@drawable/b3_2"/>
                <TextView
                    android:id="@+id/text_avatar"
                    android:text="@string/title_qudrataka"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_text_color"
                    android:shadowRadius="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/qudrataka"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="?selectableItemBackground"/>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:paddingEnd="20dp"
                android:text="Qudrat Abdurahimov"
                android:textColor="@color/white"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:paddingStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="O'quv markaz mentorlari"
                android:textColor="@color/white"
                android:paddingLeft="24dp" />
            <FrameLayout
                android:background="@drawable/bg_item_slick"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/image_avatar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:src="@drawable/b4"/>
                <TextView
                    android:id="@+id/text_avatar2"
                    android:text="@string/title_sherzodaka"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_text_color"
                    android:shadowRadius="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/sherzodaka"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="?selectableItemBackground"/>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:paddingEnd="20dp"
                android:text="Sherzodbek Muhammadiev"
                android:textColor="@color/white"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_width="195dp"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>
            <FrameLayout
                android:background="@drawable/bg_item_slick"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/image_avata3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:src="@drawable/b5"/>
                <TextView
                    android:id="@+id/text_avatar3"
                    android:text="@string/title_abdumajidaka"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_text_color"
                    android:shadowRadius="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/abdumajidaka"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="?selectableItemBackground"/>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:paddingEnd="20dp"
                android:text="Abdumajid Akramov"
                android:textColor="@color/white"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_width="145dp"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>
            <FrameLayout
                android:background="@drawable/bg_item_slick"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/image_avata4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:src="@drawable/img_temur_sumon"/>
                <TextView
                    android:id="@+id/text_avatar4"
                    android:text="@string/title_temurusmon"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_text_color"
                    android:shadowRadius="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/temur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="?selectableItemBackground"/>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:paddingEnd="20dp"
                android:text="Temur Usmonov"
                android:textColor="@color/white"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_width="115dp"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:paddingStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Xorijiy kompaniya dasturchilari"
                android:textColor="@color/white"
                android:paddingLeft="24dp" />
            <FrameLayout
                android:background="@drawable/bg_item_slick"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_height="300dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:src="@drawable/img_sherali_aka"/>
                <TextView
                    android:text="Dasturlashni o'rganishni qanday boshlash kerak ?"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_text_color"
                    android:shadowRadius="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/sheraliaka"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="?selectableItemBackground"/>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:paddingEnd="20dp"
                android:text="Sherali Obidov"
                android:textColor="@color/white"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_width="102dp"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginRight="20dp"
                />
            <FrameLayout
                android:background="@drawable/bg_item_slick"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_height="300dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    />
                <ImageView
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:src="@drawable/b1"/>
                <TextView
                    android:text="@string/title_jahongir"
                    android:shadowColor="@color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:textSize="22sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_text_color"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_gravity="bottom|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <FrameLayout
                    android:id="@+id/jahongiraka"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:background="?selectableItemBackground"/>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="end"
                android:paddingEnd="20dp"
                android:text="Jahongir Rahmonov"
                android:textColor="@color/white"
                android:paddingRight="20dp" />
            <ImageView
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_width="143dp"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"/>


        <FrameLayout
            android:background="@drawable/bg_item_slick"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:elevation="18dp"
            android:layout_height="80dp">

            <TextView
                android:text="Boshqa qiziqarli maqolalar"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:textSize="22sp"
                android:padding="16dp"
                android:background="@drawable/bg_text_color"
                android:shadowRadius="2"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <FrameLayout
                android:id="@+id/extrainfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?selectableItemBackground"/>

        </FrameLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>